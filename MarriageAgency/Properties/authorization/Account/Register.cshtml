@model TestingSystem.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
</head>
<body>
    <div class="container col-md-8 mx-auto">
        <h2 class="mb-4 text-center">Регистрация</h2>
        <div class="card " style="border-radius: 15px;">
            <div class="card-body">
                <form method="post" asp-controller="Account" asp-action="Register">
                    <div asp-validation-summary="ModelOnly" class="text-danger small"></div>
                    <div class="form-group">
                        <label asp-for="Login" class="control-label"></label>
                        <input type="text" asp-for="Login" class="form-control" />
                        <span class="text-danger small" asp-validation-for="Login"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input type="text" asp-for="Name" class="form-control" />
                        <span class="text-danger small" asp-validation-for="Name"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Surname" class="control-label"></label>
                        <input type="text" asp-for="Surname" class="form-control" />
                        <span class="text-danger small" asp-validation-for="Surname"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input type="email" asp-for="Email" class="form-control" />
                        <span class="text-danger small" asp-validation-for="Email"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label"></label>
                        <input type="password" asp-for="Password" class="form-control" />
                        <span class="text-danger small" asp-validation-for="Password"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PasswordConfirm" class="control-label"></label>
                        <input type="password" asp-for="PasswordConfirm" class="form-control" />
                        <span class="text-danger small" asp-validation-for="PasswordConfirm"></span>
                    </div>
                    <div class="text-center form-group" style="margin-bottom: -5px">
                        <input type="submit" value="Регистрация" class="btn btn-outline-secondary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>

